<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Examen_Mvvm.ViewModels"
             x:Class="Examen_Mvvm.Views.MainPage">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Producto 1:" />
            <Entry Text="{Binding Producto1, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Ingrese el precio del producto 1" />

            <Label Text="Producto 2:" />
            <Entry Text="{Binding Producto2, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Ingrese el precio del producto 2" />

            <Label Text="Producto 3:" />
            <Entry Text="{Binding Producto3, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Ingrese el precio del producto 3" />

            <Label Text="Subtotal:" />
            <Entry Text="{Binding SubtotalValue}" IsReadOnly="True" />

            <Label Text="Descuento aplicado (%):" />
            <Entry Text="{Binding DescuentoAplicadoValue}" IsReadOnly="True" />

            <Label Text="Total a pagar:" />
            <Entry Text="{Binding TotalPagar}" IsReadOnly="True" />

            <Label Text="{Binding MensajeErrorValue}" TextColor="Red" IsVisible="{Binding MensajeErrorValue}" />

            <HorizontalStackLayout Spacing="20">
                <Button Text="Calcular" Command="{Binding CalcularCommand}" />
                <Button Text="Limpiar" Command="{Binding LimpiarCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
